arch i486;

#include <primebank.map>

/*
 * space bank latency test
 */

/* builds a node tree with 2048 slots: */
pgtree = empty segtree with 2048 pages;

lat_spcbank = new process;
lat_spcbank.seg = program segment "lat_spcbank";
lat_spcbank.pc = symbol "lat_spcbank" _start;
lat_spcbank.seg = lat_spcbank.seg with page at 0x1f000; /* for stack */

lat_spcbank pc = lat_spcbank.pc;
lat_spcbank sp = 0x20000;
lat_spcbank space = lat_spcbank.seg;
lat_spcbank schedule = sched(8);	/* normal */

lat_spcbank key reg 7 = primebank;
lat_spcbank key reg 8 = pgtree;
lat_spcbank key reg 9 = misc Sleep;
lat_spcbank key reg 10 = misc Console;
lat_spcbank key reg 11 = misc SysTrace;

run lat_spcbank;
