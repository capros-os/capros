#include <primebank.map>
#include <ipltool.map>

/*
 * null call domain test case.  Times how fast we can invoke the null
 * key.
 */

echo = new process;
echo.seg = program segment BUILDDIR "echo";
echo.pc = symbol BUILDDIR "echo" _start;
echo.seg = echo.seg with page at 0x20000; /* for stack */

echo pc = echo.pc;
echo sp = 0x21000;
echo space = echo.seg;
echo schedule = sched(8);	/* normal */

echo key reg 9 = misc Sleep;
echo key reg 10 = misc Console;
echo key reg 11 = misc SysTrace;

call = new process;
call.seg = program segment BUILDDIR "call";
call.pc = symbol BUILDDIR "call" _start;
call.seg = call.seg with page at 0x20000; /* for stack */

call pc = call.pc;
call sp = 0x21000;
call space = call.seg;
call schedule = sched(8);	/* normal */

call key reg 8 = start echo 0;
call key reg 9 = misc Sleep;
call key reg 10 = misc Console;
call key reg 11 = misc SysTrace;

run call;
run echo;

