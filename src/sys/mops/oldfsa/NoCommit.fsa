// Start until proven otherwise
t start start { other }
t okay okay { other }
t error error { other }

// Go to okay state when inv_Commit returns:
t start okay { function_exit { function_declarator "inv_Commit" { ellipsis } } { ellipsis } }

// Go to okay state when thr_Yield returns:
t start okay { function_entry { function_declarator "thr_Yield" { ellipsis } } { ellipsis } }

// After commit, better not call yield:
t start error { function_exit { function_declarator "proc_KeyDispatch" { ellipsis } } { ellipsis } }


