dirsync=$0
srcdir=$1
destdir=$2

if [ ! -d ${destdir} ]
then
    mkdir ${destdir}
fi

# Clean out the stuff that needs pruning:
for dest in ${destdir}/*
do
    # destdir may be empty:
    if [ "${dest}" = "${destdir}/*" ]
    then
	break
    fi

    bn=`basename ${dest}`
    src=${srcdir}/${bn}
    nuke="no"

    # If source file is gone, or one is dir and other file, nuke 
    # the destination
    if [ ! -e ${src} ]
    then
	nuke="yes"
    elif [ -f $src -a ! -f $dest ]
    then
	nuke="yes"
    elif [ -d $src -a ! -d $dest ]
    then
	nuke="yes"
    fi

    if [ "$nuke" = "yes" ]
    then
	rm -rf $dest
    fi
done

for src in ${srcdir}/*
do
    # srcdir may be empty:
    if [ "${src}" = "${srcdir}/*" ]
    then
	break
    fi

    bn=`basename ${src}`
    dest=${destdir}/${bn}

    if [ -f ${src} ]
    then
	cmp -s ${src} ${dest}
	if [ $? -ne 0 ]
	then
	    cp $src $dest
	fi
    elif [ -d ${src} ]
    then
	${dirsync} ${src} ${dest}
    fi
done
